<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.opet.tds.exemploactivities">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.FloatActivity"
            android:label="@string/title_activity_float"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.BottomActivity"
            android:label="@string/title_activity_bottom"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.BookListActivity"
            android:label="@string/title_book_list"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.BookDetailActivity"
            android:label="@string/title_book_detail"
            android:parentActivityName=".Activity.BookListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.BookListActivity" />
        </activity>
        <activity
            android:name=".Activity.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.opet.tds.exemploactivities.Activity.MainActivity" />
        </activity>
    </application>

</manifest>